{
    "version": 2,
    "builds": [
        {
            "src": "api/*.js",
            "use": "@vercel/node"
        },
        {
            "src": "*.html",
            "use": "@vercel/static"
        },
        {
            "src": "*.{js,css,json,png}",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/leaderboard",
            "dest": "/api/leaderboard.js"
        },
        {
            "src": "/",
            "dest": "/index.html"
        },
        {
            "src": "/play",
            "dest": "/play_mirror_maze.html"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ]
} 